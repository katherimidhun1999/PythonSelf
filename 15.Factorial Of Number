#15 Factorial Of Number

def factorial(lastVal):
          fact=1
          if(lastVal==0 or lastVal<0):
                    print("Factorial of Zero-0 is 1\nEnter Greater Number\n")
                    pass
                    #continue
          else:
                    for i in range(1,lastVal+1):
                              fact=(fact*i)
                              print("For",i,"-",fact)
                    print("\nFor",i," The Value is:",fact)


Limit=int(input("Enter a Number:"))
factorial(Limit)
